<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/generalSettings">
        <ListPreference
            android:defaultValue="ru"
            android:entries="@array/langName"
            android:entryValues="@array/langValue"
            android:key="lang"
            android:summary="@string/langSummary"
            android:title="@string/lang" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sound"
            android:summary="@string/soundSummary"
            android:title="@string/sound" />
        <ListPreference
            android:defaultValue="1/3"
            android:entries="@array/actsHeight"
            android:entryValues="@array/actsHeight"
            android:key="actsHeight"
            android:summary="@string/actsHeightSummary"
            android:title="@string/actsHeight" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="separator"
            android:summary="@string/separatorSummary"
            android:title="@string/separator" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="gestures"
            android:summary="@string/gesturesSum"
            android:title="@string/gestures" />
        <Preference
            android:defaultValue="false"
            android:enabled="false"
            android:title="@string/plugin" />
        <Preference
            android:title="@string/aboutApp"
            android:key="showAbout" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/textSettings">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/fontName"
            android:entryValues="@array/fontValue"
            android:key="typeface"
            android:title="@string/fontStyle" />
        <ListPreference
            android:defaultValue="16"
            android:entries="@array/fontSize"
            android:entryValues="@array/fontSize"
            android:key="fontSize"
            android:title="@string/fontSize" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="useGameFont"
            android:title="@string/useGameFont" />
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/def_back_color"
            android:key="backColor"
            android:title="@string/backColor" />
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/def_text_color"
            android:key="textColor"
            android:title="@string/textColor" />
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="@color/def_link_color"
            android:key="linkColor"
            android:title="@string/linkColor" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
