<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".QuestPlayerApplication"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/appName"
        android:largeHeap="true"
        android:theme="@style/Theme.QSP.Translucent"
        tools:targetApi="m">

        <activity
            android:name=".view.activities.GameStockActivity"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.GameActivity"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.QSP.Translucent.NoActionBar" />

        <activity
            android:name=".view.activities.SettingsActivity"
            android:label="@string/settingsTitle"
            android:screenOrientation="fullSensor" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.qsp.player.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>
    </application>
</manifest>
